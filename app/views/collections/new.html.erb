<% provide(:title, 'New Collection') %>
<h1>New Collection</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@collection) do |f| %>
		<%= f.label :'Name your collection here' %>
		<%= f.text_field :title %>
		<%= f.label :'Describe your collection here' %>
		<%= f.text_field :description %>
		<%= f.label :'Insert collection picture here' %>
		<%= f.text_field :image %>

		<%= f.submit 'Create new collection', class: 'btn btn-large btn-primary' %>
		<% end %>
	</div>
</div>