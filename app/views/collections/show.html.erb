 <div class="row">
 	<div class="col-md-6 col-md-offset-1">
		<%= link_to "Edit", edit_collection_path(@collection) %>
			<h1>
				<%= @collection.title %>
			</h1>
			<h2>
				<%= @collection.description %>
			</h2>
			<h3>
				<%= image_tag @collection.image %>
			</h3>
			<h4>
				<p>Followers: </p>
				<%= @collection.followers.count %>
			</h4>
			<h5>
				<%= button_to(@collection) do |f| %>
				<%= @user.follow(@collection) %>
				<% end %>
			</h5>
	</div>
</div>

