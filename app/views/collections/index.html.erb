<% provide(:title, 'All collections') %>
<div class="container">
	<div class="text-center">
			<h1>Collections</h1>
				<h4>Videos grouped by theme or topic</h4>

			<% form_tag collections_path, :method => 'get' do %>
				<p>
					<%= text_field_tag :search, params[:search] %>
					<%= submit_tag "Search", :name => nil %>
				</p>
		<% end %>
	</div>

	<div class="container">
		<div class="text-center">
			<%= link_to "Make New Collection", new_collection_path %>
		</div> 
	</div>

	<div class="container">
		<div class='text-center'>
			<div class="row">
				<div class="col-xs-6 col-sm-12">
					<% @collections.each do |collection| %>
						<h5><%= link_to collection.title, collection_path(collection) %></h5>
						<% end %>
					</div>
				</div>
			</div>
		</div> 
	</div>



