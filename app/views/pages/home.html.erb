<% if signed_in? %>
	<div class="row">
		<div class="center hero-unit">
		<h1>Welcome to Viddo!</h1>
		 <%= link_to "Discover Videos", discover_path, class: "btn btn-large btn-primary" %>
		</div>
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
		</aside>
	</div>
<% else %>
	<div class="center hero-unit">
	<h1>Welcome to Viddo!</h1> 
	<h5>Curating a collection of the world's best videos.</h5>
	<%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>
