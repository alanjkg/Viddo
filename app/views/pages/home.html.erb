<% if signed_in? %>
	<div class="row">
		<h1>Welcome to Viddo! An online video-based platform for discovering, creating and sharing lists of your favourite YouTube videos</h1> 
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
		</aside>
	</div>
<% else %>
	<div class="center hero-unit">
		<h1>Welcome to Viddo! An online video-based platform for discovering, creating and sharing lists of your favourite YouTube videos</h1>

		 <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
	</div>
<% end %>

<div>
	<% @search_response.data.items.each do |search_result| %>
  		<%= search_result.snippet.title %><br/>
  		<div id="player">http://www.youtube.com/watch?v=#{search_result.id}</div><br/>
        <%= video_tag "www.youtube.com/embed/{search_result.id}", controls: :true %><br/>
  		<%= image_tag "#{search_result.snippet.thumbnails.medium.url}" %><br/>
  	<% end %>
</div>